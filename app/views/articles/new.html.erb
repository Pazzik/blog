<h1>New Article</h1>
<%= form_for :article, :html => { :multipart => true }, url: '/articles' do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
    </p>

    <p>
        <%= f.label :text %><br/>
        <%= f.text_area :text %>
    </p>
    
    <p>
        <%= f.label :picture  %><br/>
        <%= f.file_field :picture %>
    </p>

    <p>
        <%= f.label :video  %><br/>
        <%= f.file_field :video %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>

<h2>Articles list</h2>
<% @articles.each do |a| %>
    <p>
    	<%= image_tag a.picture.url(:thumb) %><br/>
        <h4><%= a.title %></h4><br/>
        <%= a.text %><br/>
        <%= link_to 'Show', article_path(a) %>
        <%= link_to 'Edit', edit_article_path(a) %>
        <%= link_to 'Destroy', article_path(a),method: :delete  %>
    </p>
    <hr/>
<% end %>

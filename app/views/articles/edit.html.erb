<h1>Articles#edit</h1>
<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %><br/>
    </p>

    <p>
      <%= f.label :text %><br/>
      <%= f.text_area :text %>
    </p>
  
    <p>
        <%= f.file_field :picture %>
    </p>
    
    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', articles_path %>
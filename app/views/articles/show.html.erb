<h1><%= @article.title %></h1>
<%= video_tag @article.video.url, :size => "320x240", :controls => true, :autobuffer => true, :preload => "none" %>
<%= image_tag @article.picture.url(:medium) %>
<br/>
<p>
  <%= @article.text%>
</p>
<a href="/articles">Full list</a>  <a href="/articles/<%= @article.id %>/edit">Edit article</a>

<h1>Comments list</h1>

<% @article.comments.each do |comment|%>
    <p><%= comment.body %></p>
    <i>Added by <%= comment.author  %></i>
    <hr/>
<% end %>


<h1>New comments</h1>
<%= form_for ([@article,@article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br/>
      <%= f.text_field :author %><br/>
    </p>

    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>